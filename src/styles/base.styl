@import'./variables.styl';

html
	font-family Arial, Helvetica, sans-serif
	font-size 16px
	height 100%
	min-height 100%
	color $baseTextColor

body
	margin 0
	padding 0
	height 100%
	min-height 100%
	background red//#f4f7f6


.container
	width 50px
	height:  80px
	margin 0 auto

h1,h2,h3,h4
	margin 0

.image
	> img
		display block
		width 100%

.text-bold
	font-weight bold

.text-green
	color $baseGreenColor

.page-container{
    width 390px
    height 500px
	position  absolute
    left 50%
    transform translateX(-50%) translateY(-50%)
    background blue
    text-align center
}